<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/rel">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_1"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/slug_volume"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal"
            android:layout_marginTop="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbl"
            android:text="@string/bbl_api"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_1"
            android:layout_toEndOf="@id/edit_text_1"
            android:layout_alignBaseline="@id/edit_text_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:textColor="#ff000000"
            android:text="Ã—"
            android:layout_alignBaseline="@id/edit_text_1"
            android:layout_toRightOf="@id/bbl"
            android:layout_toEndOf="@id/bbl"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket"
            android:text="["
            android:textColor="#ff000000"
            android:layout_alignTop="@+id/edit_text_2"
            android:layout_toRightOf="@id/multiply"
            android:layout_toEndOf="@id/multiply"
            android:textSize="60sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_2"
            android:layout_toRightOf="@id/bracket"
            android:layout_toEndOf="@id/bracket"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/slug_density"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ppg"
            android:text="@string/ppg_api"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_2"
            android:layout_toEndOf="@id/edit_text_2"
            android:layout_alignBaseline="@id/edit_text_2"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:id="@+id/horizontal_line"
            android:layout_alignLeft="@id/edit_text_2"
            android:layout_alignStart="@id/edit_text_2"
            android:layout_alignEnd="@id/ppg_1"
            android:layout_alignRight="@id/ppg_1"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="#000000"
            android:layout_below="@id/edit_text_2"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_3"
            android:layout_below="@id/horizontal_line"
            android:layout_alignLeft="@id/edit_text_2"
            android:layout_alignStart="@id/edit_text_2"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/minimum_pressure"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ppg_1"
            android:text="@string/ppg_api"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_3"
            android:layout_toEndOf="@id/edit_text_3"
            android:layout_alignBaseline="@id/edit_text_3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/underscore"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#ff000000"
            android:text="_"
            android:layout_toRightOf="@id/horizontal_line"
            android:layout_toEndOf="@id/horizontal_line"
            android:layout_alignBottom="@id/horizontal_line"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#ff000000"
            android:id="@+id/one"
            android:text="1"
            android:layout_toRightOf="@id/underscore"
            android:layout_toEndOf="@id/underscore"
            android:layout_alignTop="@id/underscore"
            android:paddingTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket_1"
            android:text="]"
            android:textColor="#ff000000"
            android:layout_alignTop="@+id/edit_text_2"
            android:layout_toRightOf="@id/one"
            android:layout_toEndOf="@id/one"
            android:textSize="60sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/equals"
            android:text="="
            android:textColor="#ff000000"
            android:layout_alignBaseline="@+id/answer"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/answer"
            android:text="@string/answer"
            android:layout_toRightOf="@id/equals"
            android:layout_toEndOf="@id/equals"
            android:layout_below="@id/edit_text_3"
            android:textColor="#ff000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>
    </ScrollView>