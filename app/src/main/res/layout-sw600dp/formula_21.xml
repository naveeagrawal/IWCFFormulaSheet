<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/rel">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket_0"
            android:text="["
            android:textColor="#ff000000"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="5dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_1"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/mud_density"
            android:textColorHint="@android:color/darker_gray"
            android:layout_toRightOf="@id/bracket_0"
            android:layout_toEndOf="@id/bracket_0"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ppg"
            android:text="@string/ppg_api"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_1"
            android:layout_toEndOf="@id/edit_text_1"
            android:layout_alignBaseline="@id/edit_text_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:textColor="#ff000000"
            android:text="×"
            android:layout_alignBaseline="@id/edit_text_1"
            android:layout_toRightOf="@id/ppg"
            android:layout_toEndOf="@id/ppg"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/constant"
            android:textColor="#ff000000"
            android:text="@string/constant_0052"
            android:layout_alignBaseline="@id/edit_text_1"
            android:layout_toRightOf="@id/multiply"
            android:layout_toEndOf="@id/multiply"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiply_1"
            android:textColor="#ff000000"
            android:text="×"
            android:layout_alignBaseline="@id/edit_text_1"
            android:layout_toRightOf="@id/constant"
            android:layout_toEndOf="@id/constant"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_2"
            android:layout_toRightOf="@id/multiply_1"
            android:layout_toEndOf="@id/multiply_1"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/closed_end_displacement"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbl_ft"
            android:text="@string/bbl_ft_api"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_2"
            android:layout_toEndOf="@id/edit_text_2"
            android:layout_alignBaseline="@id/edit_text_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket_1"
            android:text="]"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/bbl_ft"
            android:layout_toEndOf="@id/bbl_ft"
            android:textSize="30sp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:id="@+id/horizontal_line"
            android:layout_alignLeft="@+id/bracket"
            android:layout_alignStart="@id/bracket"
            android:layout_alignEnd="@id/bracket_2"
            android:layout_alignRight="@id/bracket_2"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="#000000"
            android:layout_below="@id/edit_text_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket"
            android:text="["
            android:textColor="#ff000000"
            android:layout_alignBottom="@id/edit_text_3"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_3"
            android:layout_toRightOf="@id/bracket"
            android:layout_toEndOf="@id/bracket"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/riser_or_casing_capacity"
            android:textColorHint="@android:color/darker_gray"
            android:layout_below="@id/horizontal_line"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbl_ft_1"
            android:text="@string/bbl_ft_api"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_3"
            android:layout_toEndOf="@id/edit_text_3"
            android:layout_alignBaseline="@id/edit_text_3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minus"
            android:textColor="#ff000000"
            android:text="-"
            android:layout_alignBaseline="@id/edit_text_4"
            android:layout_toRightOf="@id/bbl_ft_1"
            android:layout_toEndOf="@id/bbl_ft_1"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_4"
            android:layout_toRightOf="@id/minus"
            android:layout_toEndOf="@id/minus"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/closed_end_displacement"
            android:textColorHint="@android:color/darker_gray"
            android:layout_below="@id/horizontal_line"
            android:inputType="numberDecimal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbl_ft_2"
            android:text="@string/bbl_ft_api"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_4"
            android:layout_toEndOf="@id/edit_text_4"
            android:layout_alignBaseline="@id/edit_text_4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket_2"
            android:text="]"
            android:textColor="#ff000000"
            android:layout_alignBottom="@+id/edit_text_4"
            android:layout_toRightOf="@id/bbl_ft_2"
            android:layout_toEndOf="@id/bbl_ft_2"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/equals"
            android:text="="
            android:textColor="#ff000000"
            android:layout_alignBaseline="@+id/answer"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/answer"
            android:text="@string/answer"
            android:layout_toRightOf="@id/equals"
            android:layout_toEndOf="@id/equals"
            android:layout_below="@id/edit_text_4"
            android:textColor="#ff000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>
</ScrollView>