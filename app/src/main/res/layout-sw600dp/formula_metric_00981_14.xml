<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/rel">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_1"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="@string/kill_rate_pressure"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/psi"
        android:text="@string/bar"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/edit_text_1"
        android:layout_toEndOf="@id/edit_text_1"
        android:layout_alignBaseline="@id/edit_text_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        android:textColor="#ff000000"
        android:text="+"
        android:layout_alignBaseline="@+id/edit_text_2"
        android:layout_toRightOf="@id/psi"
        android:layout_toEndOf="@id/psi"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_2"
        android:layout_toRightOf="@id/plus"
        android:layout_toEndOf="@id/plus"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="SIDPP"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/psi_1"
        android:text="@string/bar"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/edit_text_2"
        android:layout_toEndOf="@id/edit_text_2"
        android:layout_alignBaseline="@id/edit_text_2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/equals"
        android:text="="
        android:textColor="#ff000000"
        android:layout_alignBaseline="@+id/answer"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/answer"
        android:text="@string/answer"
        android:layout_toRightOf="@id/equals"
        android:layout_toEndOf="@id/equals"
        android:layout_below="@id/edit_text_1"
        android:textColor="#ff000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>
    </ScrollView>