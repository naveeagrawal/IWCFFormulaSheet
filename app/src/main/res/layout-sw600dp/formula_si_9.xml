<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/rel">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/old_pump_pressure"
            android:hint="@string/old_pump_pressure"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/psi"
            android:text="@string/kPa"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/old_pump_pressure"
            android:layout_toEndOf="@id/old_pump_pressure"
            android:layout_alignBaseline="@id/old_pump_pressure"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:textColor="#ff000000"
            android:text="Ã—"
            android:layout_alignBaseline="@id/old_pump_pressure"
            android:layout_toRightOf="@id/psi"
            android:layout_toEndOf="@id/psi"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket"
            android:layout_below="@id/old_pump_pressure"
            android:text="["
            android:textColor="#ff000000"
            android:textSize="60sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_pump_rate"
            android:hint="@string/new_pump_rate"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:layout_below="@id/old_pump_pressure"
            android:layout_toRightOf="@id/bracket"
            android:layout_toEndOf="@id/bracket"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spm"
            android:text="(SPM)"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/new_pump_rate"
            android:layout_toEndOf="@id/new_pump_rate"
            android:layout_alignBaseline="@id/new_pump_rate"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:id="@+id/horizontal_line"
            android:layout_alignLeft="@id/new_pump_rate"
            android:layout_alignStart="@id/new_pump_rate"
            android:layout_alignEnd="@id/spm"
            android:layout_alignRight="@id/spm"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="#000000"
            android:layout_below="@id/new_pump_rate"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/old_pump_rate"
            android:hint="@string/old_pump_rate"
            android:textColorHint="@android:color/darker_gray"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:inputType="number"
            android:layout_below="@id/horizontal_line"
            android:layout_toRightOf="@id/bracket"
            android:layout_toEndOf="@id/bracket"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spm_1"
            android:text="(SPM)"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/old_pump_rate"
            android:layout_toEndOf="@id/old_pump_rate"
            android:layout_alignBaseline="@id/old_pump_rate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket_1"
            android:text="]"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/spm"
            android:layout_toEndOf="@id/spm"
            android:layout_alignTop="@id/bracket"
            android:textSize="60sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="#ff000000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/bracket_1"
            android:layout_toEndOf="@id/bracket_1"
            android:layout_alignTop="@id/bracket_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/equals"
            android:text="="
            android:textColor="#ff000000"
            android:layout_alignBaseline="@+id/answer"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/answer"
            android:text="@string/answer"
            android:layout_toRightOf="@id/equals"
            android:layout_toEndOf="@id/equals"
            android:layout_below="@id/old_pump_rate"
            android:textColor="#ff000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>