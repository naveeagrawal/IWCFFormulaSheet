<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hyd_press_drill_string"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="@string/hydraulic_pressure_in_drill_string"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/psi"
        android:text="@string/bar"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/hyd_press_drill_string"
        android:layout_toEndOf="@id/hyd_press_drill_string"
        android:layout_alignBaseline="@id/hyd_press_drill_string"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        android:text="+"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/psi"
        android:layout_toEndOf="@id/psi"
        android:layout_alignBaseline="@id/sidpp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sidpp"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:layout_toRightOf="@id/plus"
        android:layout_toEndOf="@id/plus"
        android:hint="SIDPP"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/psi_1"
        android:textColor="#ff000000"
        android:text="@string/bar"
        android:layout_toRightOf="@id/sidpp"
        android:layout_toEndOf="@id/sidpp"
        android:layout_alignBaseline="@id/sidpp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/equals"
        android:text="="
        android:textColor="#ff000000"
        android:layout_alignBaseline="@+id/answer"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/answer"
        android:text="@string/answer"
        android:layout_toRightOf="@id/equals"
        android:layout_toEndOf="@id/equals"
        android:layout_below="@id/sidpp"
        android:textColor="#ff000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>
    </ScrollView>