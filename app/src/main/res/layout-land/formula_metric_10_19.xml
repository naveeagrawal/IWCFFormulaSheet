<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/rel">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket"
            android:text="["
            android:textColor="#ff000000"
            android:textSize="60sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_1"
            android:layout_toRightOf="@id/bracket"
            android:layout_toEndOf="@id/bracket"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/precharge_pressure"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/psi"
            android:text="@string/kg_cm2"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_1"
            android:layout_toEndOf="@id/edit_text_1"
            android:layout_alignBaseline="@id/edit_text_1"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:id="@+id/horizontal_line"
            android:layout_alignLeft="@id/edit_text_1"
            android:layout_alignStart="@id/edit_text_1"
            android:layout_alignEnd="@id/psi"
            android:layout_alignRight="@id/psi"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:background="#000000"
            android:layout_below="@id/edit_text_1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_2"
            android:layout_below="@id/horizontal_line"
            android:layout_alignLeft="@id/edit_text_1"
            android:layout_alignStart="@id/edit_text_1"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/minimum_pressure"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/psi_1"
            android:text="@string/kg_cm2"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_2"
            android:layout_toEndOf="@id/edit_text_2"
            android:layout_alignBaseline="@id/edit_text_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minus"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#ff000000"
            android:text="_"
            android:layout_toRightOf="@id/horizontal_line"
            android:layout_toEndOf="@id/horizontal_line"
            android:layout_alignBottom="@id/horizontal_line"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_3"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/precharge_pressure"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal"
            android:layout_toRightOf="@id/minus"
            android:layout_toEndOf="@id/minus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/psi_2"
            android:text="@string/kg_cm2"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_3"
            android:layout_toEndOf="@id/edit_text_3"
            android:layout_alignBaseline="@id/edit_text_3"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:id="@+id/horizontal_line_1"
            android:layout_alignLeft="@id/edit_text_3"
            android:layout_alignStart="@id/edit_text_3"
            android:layout_alignRight="@id/psi_2"
            android:layout_alignEnd="@id/psi_2"
            android:background="#000000"
            android:layout_below="@id/edit_text_3"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_4"
            android:layout_below="@id/horizontal_line_1"
            android:layout_alignLeft="@id/edit_text_3"
            android:layout_alignStart="@id/edit_text_3"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/maximum_pressure"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/psi_3"
            android:text="@string/kg_cm2"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_4"
            android:layout_toEndOf="@id/edit_text_4"
            android:layout_alignBaseline="@id/edit_text_4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="]"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/psi_2"
            android:layout_toEndOf="@id/psi_2"
            android:layout_alignTop="@id/edit_text_3"
            android:textSize="60sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:textColor="#ff000000"
            android:text="Ã—"
            android:layout_alignBaseline="@+id/edit_text_5"
            android:layout_toRightOf="@id/ft"
            android:layout_toEndOf="@id/ft"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_5"
            android:layout_below="@id/edit_text_4"
            android:layout_alignLeft="@id/multiply"
            android:layout_alignStart="@id/multiply"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/bottle_size"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gallons"
            android:text="@string/L"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_5"
            android:layout_toEndOf="@id/edit_text_5"
            android:layout_alignBaseline="@id/edit_text_5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/equals"
            android:text="="
            android:textColor="#ff000000"
            android:layout_alignBaseline="@+id/answer"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/answer"
            android:text="@string/answer"
            android:layout_toRightOf="@id/equals"
            android:layout_toEndOf="@id/equals"
            android:layout_below="@id/edit_text_5"
            android:textColor="#ff000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>