<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/rel"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:id="@+id/mud_density"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/mud_density"
        android:textColorHint="@android:color/darker_gray"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:inputType="numberDecimal"
        android:linksClickable="false" />
    <TextView
        android:id="@+id/ppg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ppg_api"
        android:layout_toRightOf="@id/mud_density"
        android:layout_toEndOf="@id/mud_density"
        android:layout_alignBaseline="@id/mud_density"
        android:textColor="#ff000000" />
    <TextView
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã—"
        android:layout_toRightOf="@id/ppg"
        android:layout_toEndOf="@id/ppg"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignBaseline="@id/mud_density"
        android:textColor="#ff000000" />
    <TextView
        android:id="@+id/constant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/constant_0052"
        android:layout_toRightOf="@id/multiply"
        android:layout_toEndOf="@id/multiply"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignBaseline="@id/mud_density"
        android:textColor="#ff000000" />
    <TextView
        android:id="@+id/equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:layout_below="@id/mud_density"
        android:textColor="#ff000000"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/answer"
        android:layout_toRightOf="@id/equals"
        android:layout_toEndOf="@id/equals"
        android:layout_alignBaseline="@id/equals"
        android:textColor="#ff000000"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>
    </ScrollView>