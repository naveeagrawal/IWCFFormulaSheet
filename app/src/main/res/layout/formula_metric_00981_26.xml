<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/rel">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket_0"
            android:text="["
            android:textColor="#ff000000"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_1"
            android:layout_toRightOf="@id/bracket"
            android:layout_toEndOf="@id/bracket"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:hint="@string/increase_in_surface_pressure"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/psi"
            android:text="@string/bar"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_1"
            android:layout_toEndOf="@id/edit_text_1"
            android:layout_alignBaseline="@id/edit_text_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multiply"
            android:textColor="#ff000000"
            android:text="ร"
            android:layout_alignBaseline="@id/edit_text_2"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_2"
            android:layout_below="@id/edit_text_1"
            android:layout_toRightOf="@id/multiply"
            android:layout_toEndOf="@id/multiply"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/influx_volume"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbl"
            android:text="@string/L"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_2"
            android:layout_toEndOf="@id/edit_text_2"
            android:layout_alignBaseline="@id/edit_text_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket_1"
            android:text="]"
            android:textColor="#ff000000"
            android:layout_alignBaseline="@+id/edit_text_2"
            android:layout_toRightOf="@id/bbl"
            android:layout_toEndOf="@id/bbl"
            android:textSize="30sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/divide"
            android:textColor="#ff000000"
            android:text="รท"
            android:layout_toRightOf="@id/bracket_1"
            android:layout_toEndOf="@id/bracket_1"
            android:layout_alignBaseline="@id/bbl"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket"
            android:text="["
            android:textColor="#ff000000"
            android:layout_alignBaseline="@+id/edit_text_3"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_3"
            android:layout_toRightOf="@id/bracket"
            android:layout_toEndOf="@id/bracket"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:hint="@string/formation_pressure"
            android:textColorHint="@android:color/darker_gray"
            android:layout_below="@id/edit_text_2"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/psi_1"
            android:text="@string/bar"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_3"
            android:layout_toEndOf="@id/edit_text_3"
            android:layout_alignBaseline="@id/edit_text_3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/minus"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="#ff000000"
            android:text="-"
            android:layout_toRightOf="@id/psi_1"
            android:layout_toEndOf="@id/psi_1"
            android:layout_alignBaseline="@id/edit_text_3"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_text_4"
            android:textColor="#ff000000"
            android:textCursorDrawable="@null"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:hint="@string/increase_in_surface_pressure"
            android:textColorHint="@android:color/darker_gray"
            android:layout_below="@id/edit_text_3"
            android:inputType="numberDecimal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/psi_2"
            android:text="@string/bar"
            android:textColor="#ff000000"
            android:layout_toRightOf="@id/edit_text_4"
            android:layout_toEndOf="@id/edit_text_4"
            android:layout_alignBaseline="@id/edit_text_4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bracket_2"
            android:text="]"
            android:textColor="#ff000000"
            android:layout_alignBaseline="@+id/edit_text_4"
            android:layout_toRightOf="@id/psi_2"
            android:layout_toEndOf="@id/psi_2"
            android:textSize="30sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/equals"
            android:text="="
            android:textColor="#ff000000"
            android:layout_alignBaseline="@+id/answer"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/answer"
            android:text="@string/answer"
            android:layout_toRightOf="@id/equals"
            android:layout_toEndOf="@id/equals"
            android:layout_below="@id/edit_text_4"
            android:textColor="#ff000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>