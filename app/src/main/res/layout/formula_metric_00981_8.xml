<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/rel">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bracket"
        android:textColor="#ff000000"
        android:text="["
        android:textSize="60sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/safety_margin"
        android:layout_toRightOf="@id/bracket"
        android:layout_toEndOf="@id/bracket"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="@string/safety_margin"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/psi"
        android:text="@string/bar"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/safety_margin"
        android:layout_toEndOf="@id/safety_margin"
        android:layout_alignBaseline="@id/safety_margin"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:id="@+id/horizontal_line"
        android:layout_alignLeft="@id/safety_margin"
        android:layout_alignStart="@id/safety_margin"
        android:layout_alignEnd="@id/psi"
        android:layout_alignRight="@id/psi"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:background="#000000"
        android:layout_below="@id/safety_margin"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvd"
        android:layout_below="@id/horizontal_line"
        android:layout_alignLeft="@id/safety_margin"
        android:layout_alignStart="@id/safety_margin"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="TVD"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ft"
        android:text="@string/m"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/tvd"
        android:layout_toEndOf="@id/tvd"
        android:layout_alignBaseline="@id/tvd"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiply"
        android:textColor="#ff000000"
        android:text="Ã—"
        android:layout_alignBaseline="@id/tvd"
        android:layout_toRightOf="@id/ft"
        android:layout_toEndOf="@id/ft"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constant"
        android:textColor="#ff000000"
        android:text="@string/constant_00981"
        android:layout_alignBaseline="@id/tvd"
        android:layout_toRightOf="@id/multiply"
        android:layout_toEndOf="@id/ft"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:text="]"
        android:layout_toRightOf="@id/psi"
        android:layout_toEndOf="@id/psi"
        android:textSize="60sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/plus"
        android:textColor="#ff000000"
        android:text="+"
        android:layout_alignBaseline="@+id/mud_density"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mud_density"
        android:layout_below="@id/tvd"
        android:layout_toRightOf="@id/plus"
        android:layout_toEndOf="@id/plus"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="@string/mud_density"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ppg"
        android:text="@string/kg_L"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/mud_density"
        android:layout_toEndOf="@id/mud_density"
        android:layout_alignBaseline="@id/mud_density"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/equals"
        android:text="="
        android:textColor="#ff000000"
        android:layout_alignBaseline="@+id/answer"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/answer"
        android:text="@string/answer"
        android:layout_toRightOf="@id/equals"
        android:layout_toEndOf="@id/equals"
        android:layout_below="@id/mud_density"
        android:textColor="#ff000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="15sp"
        android:textStyle="bold" />
</RelativeLayout>
    </ScrollView>