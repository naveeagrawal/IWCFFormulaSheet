<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/rel">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bracket"
        android:text="["
        android:textColor="#ff000000"
        android:textSize="30sp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_1"
        android:layout_toRightOf="@id/bracket"
        android:layout_toEndOf="@id/bracket"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="@string/kill_mud_density"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ppg"
        android:text="@string/kg_m3"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/edit_text_1"
        android:layout_toEndOf="@id/edit_text_1"
        android:layout_alignBaseline="@id/edit_text_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/ppg"
        android:layout_toEndOf="@id/ppg"
        android:layout_alignBaseline="@id/edit_text_1"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_2"
        android:layout_below="@id/edit_text_1"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="@string/original_mud_density"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/ppg_1"
        android:text="@string/kg_m3"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/edit_text_2"
        android:layout_toEndOf="@id/edit_text_2"
        android:layout_alignBaseline="@id/edit_text_2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bracket_1"
        android:text="]"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/ppg_1"
        android:layout_toEndOf="@id/ppg_1"
        android:layout_alignBaseline="@id/edit_text_2"
        android:textSize="30sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiply"
        android:textColor="#ff000000"
        android:text="ร"
        android:layout_alignBaseline="@id/edit_text_2"
        android:layout_toRightOf="@id/bracket_1"
        android:layout_toEndOf="@id/bracket_1"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff000000"
        android:text="4200"
        android:layout_toRightOf="@id/multiply"
        android:layout_toEndOf="@id/multiply"
        android:layout_alignBaseline="@id/multiply"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/divide"
        android:layout_alignBaseline="@+id/edit_text_3"
        android:textColor="#ff000000"
        android:text="รท"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bracket_2"
        android:layout_alignBaseline="@id/edit_text_3"
        android:layout_toRightOf="@id/divide"
        android:layout_toEndOf="@id/divide"
        android:text="["
        android:textColor="#ff000000"
        android:textSize="30sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/constant"
        android:textColor="#ff000000"
        android:text="4200"
        android:layout_toRightOf="@id/bracket_2"
        android:layout_toEndOf="@id/bracket_2"
        android:layout_alignBaseline="@id/bracket_2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/minus"
        android:text="-"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/constant"
        android:layout_toEndOf="@id/constant"
        android:layout_alignBaseline="@id/constant"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_3"
        android:layout_below="@id/edit_text_2"
        android:layout_toRightOf="@id/minus"
        android:layout_toEndOf="@id/minus"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="@string/kill_mud_density"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ppg_2"
        android:text="@string/kg_m3"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/edit_text_3"
        android:layout_toEndOf="@id/edit_text_3"
        android:layout_alignBaseline="@id/edit_text_3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bracket_3"
        android:text="]"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/ppg_2"
        android:layout_toEndOf="@id/ppg_2"
        android:layout_alignBaseline="@id/edit_text_3"
        android:textSize="30sp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/equals"
        android:text="="
        android:textColor="#ff000000"
        android:layout_alignBaseline="@+id/answer"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/answer"
        android:text="@string/answer"
        android:layout_toRightOf="@id/equals"
        android:layout_toEndOf="@id/equals"
        android:layout_below="@id/edit_text_3"
        android:textColor="#ff000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
    </ScrollView>