<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rel"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pump_displacement"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:hint="@string/pump_displacement"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="numberDecimal" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m3_stroke"
        android:textColor="#ff000000"
        android:layout_toRightOf="@id/pump_displacement"
        android:layout_toEndOf="@id/pump_displacement"
        android:layout_alignBaseline="@id/pump_displacement"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/multiply"
        android:textColor="#ff000000"
        android:text="Ã—"
        android:layout_alignBaseline="@+id/pump_rate"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pump_rate"
        android:textColor="#ff000000"
        android:textCursorDrawable="@null"
        android:layout_toRightOf="@id/multiply"
        android:layout_toEndOf="@id/multiply"
        android:layout_below="@id/pump_displacement"
        android:hint="@string/pump_rate"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="number" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spm"
        android:textColor="#ff000000"
        android:layout_alignBaseline="@id/pump_rate"
        android:layout_toRightOf="@id/pump_rate"
        android:layout_toEndOf="@id/pump_rate"
        android:text="(SPM)"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/equals"
        android:text="="
        android:textColor="#ff000000"
        android:layout_alignBaseline="@+id/answer"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/answer"
        android:text="@string/answer"
        android:layout_toRightOf="@id/equals"
        android:layout_toEndOf="@id/equals"
        android:layout_below="@id/pump_rate"
        android:textColor="#ff000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="15sp"
        android:textStyle="bold" />
    </RelativeLayout>
    </ScrollView>